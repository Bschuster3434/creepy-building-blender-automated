# Local Environment Configuration
# Copy this file to local.env and set your paths

# REQUIRED: Path to Blender executable
# Example for Blender 4.0: C:\Program Files\Blender Foundation\Blender 4.0\blender.exe
# Example for Blender 3.6: C:\Program Files\Blender Foundation\Blender 3.6\blender.exe
BLENDER_PATH=C:\Program Files\Blender Foundation\Blender 4.0\blender.exe

# OPTIONAL: Path to Python executable (if using standalone validation)
# Leave blank to use system Python
PYTHON=

# OPTIONAL: Blender render settings
RENDER_ENGINE=CYCLES
RENDER_SAMPLES=128
RENDER_RESOLUTION_X=1920
RENDER_RESOLUTION_Y=1080

# OPTIONAL: Pipeline settings
MAX_ITERATIONS=50
AUTO_OPEN_RENDERS=false
